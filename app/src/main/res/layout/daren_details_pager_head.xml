<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/iv_daren_touxiang"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/tv_daren_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_daren_touxiang"
            android:text="山本耀司"
            android:textColor="#fff"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_daren_hangye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_daren_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_daren_touxiang"
            android:text="日本时装设计师"
            android:textColor="#d1d0d0"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_daren_sixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="6dp"
            android:background="#555f66"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="5dp"
            android:text="私信"
            android:textColor="#e8ebec"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_daren_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_daren_sixin"

            android:background="#526469"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="5dp"
            android:text="关注"
            android:textColor="#d0d3d4"
            android:textSize="9sp" />


    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_daren"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_daren_xihuan"
            style="@style/daren_details_rb_style"
            android:text="喜欢\n%s" />

        <RadioButton
            android:id="@+id/rb_daren_tuijian"
            style="@style/daren_details_rb_style"
            android:text="推荐\n%s" />

        <RadioButton
            android:id="@+id/rb_guanzhu"
            style="@style/daren_details_rb_style"
            android:text="关注\n%s" />

        <RadioButton
            android:id="@+id/rb_daren_fensi"
            style="@style/daren_details_rb_style"
            android:text="粉丝\n%s" />

    </RadioGroup>


